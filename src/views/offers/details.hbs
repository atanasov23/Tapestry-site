<main>
    <section id="details-info">
        <h1>Details</h1>
        <div class="coin-image">
            <img src="{{offerData.populate.image}}">
        </div>

        <div class="coin-info">
            <div class="coin-text">
                <h1 id="name">{{offerData.populate.name}}</h1>
                <h3 id="payment">{{offerData.populate.PaymentMethod}}</h3>
                <p id="price"><span>{{offerData.populate.price}}</span></p>
                <p id="description">{{offerData.populate.description}}</p>
            </div>
            <div class="product-btn">

                {{#if log}}
                {{#if offerData.owner}}
                <div class="author">
                    <a href="/edit/{{offerData.populate._id}}" class="btn-edit">Edit</a>
                    <a href="/delete/{{offerData.populate._id}}" class="btn-delete">Delete</a>
                </div>
                {{/if}}

                {{#unless offerData.owner}}
                {{#if offerData.buy}}
                <p class="buy-message">You already bought these crypto coins.</p>
                {{else}}
                <a href="/crypto/buy/{{offerData.populate._id}}" class="btn-buy">Buy</a>
                {{/if}}
                
                {{/unless}}
                {{/if}}
            </div>
        </div>
    </section>
</main>